; Cluster ${cluster_id}
$ORIGIN ${node_name_suffix}.

api       IN A     ${api_vip}
api-int   IN A     ${internal_vip}
*.apps    IN A     ${router_vip}

%{ for i, addr in lbs ~}
${lb_hostnames[i]} IN A     ${addr}
%{ endfor ~}

%{ for i, addr in masters ~}
etcd-${i} IN A     ${addr}
%{ endfor ~}

%{ for i, addr in masters ~}
_etcd-server-ssl._tcp IN SRV 0 10 2380 etcd-${i}
%{ endfor ~}
