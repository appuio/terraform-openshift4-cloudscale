; Cluster ${cluster_id}
$ORIGIN ${node_name_suffix}.

api       IN A     ${api_vip}
api-int   IN A     ${internal_vip}
ingress   IN A     ${router_vip}
egress    IN A     ${egress_vip}

*.apps    IN CNAME ingress.${node_name_suffix}

%{ for i, addr in lbs ~}
${lb_hostnames[i]} IN A     ${addr}
%{ endfor ~}

%{ for i, addr in masters ~}
etcd-${i} IN A     ${addr}
%{ endfor ~}
